@model Tuple<IEnumerable<SelectListItem>, string>  
@{
    Layout="";
}


@Html.DropDownList(Model.Item2, Model.Item1, new { @class = "form-control", name = Model.Item2 })

<script type="text/javascript">
    $(document).ready(function() {
        setTimeout(function() {
            $("#@Model.Item2").chosen({ disable_search_threshold: 10, no_results_text: "No se encontraron coincidencias con ", placeholder_text_single: "Seleccione un elemento" });
            $("div[class*='chosen-container chosen-container-single chosen-container-single-nosearch']").addClass("form-control");
            var a = $("a[class*='chosen-single']");
            if (a != null) {
                a.css("border", "0");
                a.css("background", "white");
                a.css("box-shadow", "0 0 0 white inset,0 0 0 rgba(0,0,0,.1)");
            }
        },500);
    });
</script>
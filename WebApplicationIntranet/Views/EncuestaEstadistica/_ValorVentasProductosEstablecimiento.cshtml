                        <tbody>
                            @foreach (var item in Model.VentasProductosEstablecimiento.CAT_VENTAS_PAIS_EXTRANJERO)
                            {
                                <input type="hidden" class="prodEstIds" role="@item.Id" />
                                <tr>
                                    <td>
                                       @item.CAT_CIIU.ToString()

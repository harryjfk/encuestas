@using System.Globalization
@using Entity
@model System.Collections.Generic.IEnumerable<Entity.Reportes.CiiuData>
@{

}
<table class="table table-striped table-hover table-bordered table-condensed tabla small">
    <thead>
        <tr class="cabecera2">

            <th>
                CIIU
            </th>
            <th>
                ENE
            </th>
            <th>
                FEB
            </th>
            <th>
                MAR
            </th>
            <th>
                ABR
            </th>
            <th>
                MAY
            </th>
            <th>
                JUN
            </th>
            <th>
                JUL
            </th>
            <th>
                AGO
            </th>
            <th>
                SEP
            </th>
            <th>
                OCT
            </th>
            <th>
                NOV
            </th>
            <th>
                DIC
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span>@item.Name</span>
                    
                </td>
                @for (var i = 1; i <= 12; i++)
                {
                    <td>
                        @{
                            var m = item.Month.FirstOrDefault(t => t.Number == i);
                            if (m != null)
                            {
                                <span>@m.Percent.ToString(".00", CultureInfo.CreateSpecificCulture("en"))%</span>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        }
                    </td>

                }
            </tr>
          
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="no-elements-notification">
        No hay elementos para mostrar
    </div>
}


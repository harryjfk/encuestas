@using System.Globalization
@using Entity
@model Entity.Reportes.PorcentajeEncuestaEstadisticaItem
@{

}
<table class="table table-striped table-hover table-bordered table-condensed tabla small">
    <thead>
        <tr class="cabecera2">

            <th style="width: 200px;">
                CIIU
            </th>
            @foreach (var item in Model.PorcentajeEncuestaEstadistica.HeadersList)
            {
                <th>@item</th>
            }

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Ciius)
        {
            <tr>
                <td>
                    <span>@item.Name</span>
                    
                </td>
                @for (var i = 0; i < Model.PorcentajeEncuestaEstadistica.HeadersList.Count; i++)
                {
                    <td>
                        @{
                    var current = Model.PorcentajeEncuestaEstadistica.HeadersList[i];
                    var m = item.Month.FirstOrDefault(t => t.Name == current);
                    if (m != null)
                    {
                        <span>@m.Percent.ToString(".00", CultureInfo.CreateSpecificCulture("en"))</span>
                    }
                    else
                    {
                        <span>-</span>
                    }
                        }
                    </td>

                }
           
            </tr>
          
        }
    </tbody>
</table>

@if (!Model.Ciius.Any())
{
    <div class="no-elements-notification">
        No hay elementos para mostrar
    </div>
}


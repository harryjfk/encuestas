@using System.Globalization
@model Entity.Reportes.IndiceVariacion
@{
    var guid = Guid.NewGuid().ToString();
    var guid2 = Guid.NewGuid().ToString();

}
@Scripts.Render("~/bundles/jquery")


<div id="@guid" class="col-md-6" style="margin: 0 auto"></div>
<div id="@guid2" class="col-md-6" style="margin: 0 auto"></div>
<script type="text/javascript">

    @{
        var yAxisTitle = "Indice";
        var serie = "";
        if (Model.IsVariacion)
        {
            yAxisTitle = "Variacion";
        }
        var ciius = Model.Indice.Where(t=> t.IsCiiuInformante);
        foreach (var item in ciius)
        {
            var varName = "array" + item.Id;
            @Html.Raw("var " + varName + "=[];")
            ;
            foreach (var d in item.Values.OrderBy(t => t.Number))
            {
                @Html.Raw(varName + ".push([" + d.Value + "]);")
            }
            serie += "{name:" + item.Name + ", data:" + varName + "},";
        }
        serie = serie.TrimEnd(',');
    }

    $(document).ready(function () {
        $('#@guid2').highcharts({
            chart: {
                type: 'line'
            },
            title: {
                text: 'CIIU DEL INFORMANTE'
            },
            subtitle: {
                text: 'Lineas Superpuestas'
            },
            xAxis: {
                categories: [
                    'Ene',
                    'Feb',
                    'Mar',
                    'Abr',
                    'May',
                    'Jun',
                    'Jul',
                    'Ago',
                    'Sep',
                    'Oct',
                    'Nov',
                    'Dic'
                ],
                crosshair: true
            },
            yAxis: {
                min: 0,
                title: {
                    text: '@yAxisTitle'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.2f}</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series:[@Html.Raw(serie)]
        });



        $('#@guid').highcharts({
            chart: {
                type: 'column'
            },
            title: {
                text: 'CIIU DEL INFORMANTE'
            },
            subtitle: {
                text: 'Barras'
            },
            xAxis: {
                categories: [
                    'Ene',
                    'Feb',
                    'Mar',
                    'Abr',
                    'May',
                    'Jun',
                    'Jul',
                    'Ago',
                    'Sep',
                    'Oct',
                    'Nov',
                    'Dic'
                ],
                crosshair: true
            },
            yAxis: {
                min: 0,
                title: {
                    text: '@yAxisTitle'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.2f}</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: [@Html.Raw(serie)]
        });

        $("text:contains('Highcharts.com')").hide();
    });
</script>

@using System.Globalization
@using Domain
@using Entity
@using WebApplication.Models
@model List<TrabajadoresDiasTrabajados>



                <table class="table table-striped table-hover table-bordered table-condensed tabla small">
                    <thead>
                        <tr class="cabecera">
                            <th>Cod. Establecimiento</th>
                            <th>Razon Social</th>
                            <th>Mes</th>
                            <th>
                                Días trabajados
                            </th>
                            <th>
                                Trabajadores en producción
                            </th>
                            <th>
                                Administrativos en planta
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.OrderBy(t => t.Identificador))
                        {
                            <tr>
                                <td>
                                    @item.Encuesta.Establecimiento.IdentificadorInterno
                                </td>
                                <td>
                                    @item.Encuesta.Establecimiento.RazonSocial
                                </td>
                                <td>
                                    @item.Encuesta.Fecha.Month.GetMonthText()
                                </td>
                                <td>
                                    @item.DiasTrabajados.GetValueOrDefault().ToString()
                                </td>
                                <td>
                                    @item.TrabajadoresProduccion.GetValueOrDefault().ToString()
                                </td>
                                <td>
                                    @item.AdministrativosPlanta.GetValueOrDefault().ToString()
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Any())
                {
                    <div class="no-elements-notification">
                        No hay elementos para mostrar
                    </div>
                }
            
      

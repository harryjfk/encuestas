@using Entity
@using PagedList.Mvc
@model Domain.Query<Entity.Establecimiento>

@{
    ViewBag.Title = "Establecimiento";
}

@Scripts.Render("~/bundles/jquery")

<h3 class="screen-title">Establecimientos</h3>
@using (Html.BeginForm("BuscarEstablecimientosEncuestas", "UsuarioExtranet", FormMethod.Post))
{
    <div class="panel panel-primary">
        <div class="panel-heading">B&uacute;squeda</div>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon">Nombre</span>                        
                        @Html.TextBoxFor(t => t.Criteria.Nombre, new { @class = "form-control", style = "max-width: inherit;" })
                    </div>
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Buscar" name="buscarbtn" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
}

<div id="table-container">
    <table class="table table-striped table-hover table-bordered table-condensed tabla small">
        <thead>
            <tr class="cabecera">
                <th style="width: 100px;"> Identificador Interno </th>
                <th> Establecimiento </th>
                <th> RUC </th>
                <th>Acci&oacute;n</th>
        </thead>
        <tbody>
            @foreach (var item in Model.Elements)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdentificadorInterno)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ruc)</td>

                    <td>                     
                        <a href="@Url.Action("Encuestas", "EncuestaEmpresarial")/@item.Id" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ver Encuestas de Opini&oacute;n">
                            <i class="color-black glyphicon glyphicon-search"></i>
                        </a>
                        <a href="@Url.Action("Encuestas", "EncuestaEstadistica")/@item.Id" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ver Encuestas Estad&iacute;sticas">
                            <i class="color-black glyphicon glyphicon-folder-open"></i>
                        </a>
                        |
                        <a href="@Url.Action("GetAnalista", "Establecimiento")/@item.Id" data-toggle="tooltip" data-placement="top" title="" data-original-title="Analista Asignado" id="quitar-@item.Id" role="@item.Id" class="quitarw-btn">
                            <i class="color-black glyphicon glyphicon-user"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.InitTooltip();
    });
</script>

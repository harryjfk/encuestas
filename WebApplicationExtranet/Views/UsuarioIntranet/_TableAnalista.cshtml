@using Entity
@using PagedList.Mvc
@model Domain.Query<Entity.UsuarioIntranet>
<table class="table table-striped table-hover table-bordered table-condensed tabla small">
    <thead>
        <tr class="cabecera">
            <th> TRABAJADOR </th>
            <th> DNI </th>
            <th>ACCI&Oacute;N</th>
    </thead>

    <tbody>
        @foreach (var item in Model.Elements)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Trabajador)</td>
                <td>@Html.DisplayFor(modelItem => item.DNI)</td>
                <td>
                    <a href="/UsuarioIntranet/Establecimientos/@item.Identificador" data-toggle="tooltip" data-placement="top" title="" data-original-title="Asignar Establecimientos" id="asign-@item.Identificador" role="@item.Identificador" class="asign-btn">
                        <i class="color-black glyphicon glyphicon-check"></i>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

@if (Model.Elements.Count == 0)
{
    <div class="no-elements-notification">
        No hay elementos para mostrar
    </div>
}
@Html.PagedListPager(Model.Elements, page => Url.Action("PageAnalista", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)


<script type="text/javascript">
    $(document).ready(function () {
        $.InitTooltip();
    })
</script>


@using Entity
@model Domain.Query<Entity.Establecimiento>

@{
    ViewBag.Title = "Establecimiento";
}

@Scripts.Render("~/bundles/jquery")

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">×</button>
        <strong>Alertas</strong>
        <div>
            @Html.ValidationSummary(false)
        </div>
    </div>

}



<h3 class="screen-title">Establecimientos</h3>
@using (Html.BeginForm("BuscarEstablecimientosEncuestaEmpresarial", "UsuarioIntranet", FormMethod.Post))
{
    <div class="panel panel-primary">
        <div class="panel-heading">B&Uacute;SQUEDA</div>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon">NOMBRE</span>
                        @*<input type="text" class="form-control">*@
                        @Html.TextBoxFor(t => t.Criteria.Nombre, new { @class = "form-control", style = "max-width: inherit;" })
                    </div>
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Buscar" name="buscarbtn" class="btn btn-default" />
                </div>
            </div>
        </div>


    </div>
}

<div id="table-container">
    @Html.Partial("_TableEstablecimientosEncuestaEmpresarial", Model)
</div>

